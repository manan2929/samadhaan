<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IDActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            style="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"/>

        <RelativeLayout
            android:id="@+id/intro1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginRight="10dp"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:background="@drawable/gradientfive">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                app:lottie_fileName="vision.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" />


            <TextView
                android:id="@+id/iddesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animation_view1"
                android:text="Our Vision"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/productsansregular"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/intro2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="160dp"
            android:layout_toRightOf="@+id/intro1"
            android:layout_height="180dp"
            android:background="@drawable/gradientpink">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                app:lottie_fileName="about.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" />


            <TextView
                android:id="@+id/iddesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animation_view2"
                android:text="About Us"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/productsansregular"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/intro3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="160dp"
            android:layout_below="@+id/intro1"
            android:layout_height="180dp"
            android:background="@drawable/gradientten">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                app:lottie_fileName="girltech.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" />


            <TextView
                android:id="@+id/iddesc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animation_view3"
                android:text="App Development"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/productsansregular"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/intro4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="160dp"
            android:layout_below="@+id/intro2"
            android:layout_toRightOf="@+id/intro3"
            android:layout_height="180dp"
            android:background="@drawable/gradientthirteen">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                app:lottie_fileName="service.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" />

            <TextView
                android:id="@+id/iddesc4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animation_view4"
                android:text="Plans And Services"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/productsansregular"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/intro5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="160dp"
            android:layout_below="@+id/intro3"
            android:layout_height="180dp"
            android:background="@drawable/gradientnew">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                app:lottie_fileName="why.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" />

            <TextView
                android:id="@+id/iddesc5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animation_view5"
                android:text="Why Us?"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/productsansregular"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/intro6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="160dp"
            android:layout_below="@+id/intro4"
            android:layout_toRightOf="@+id/intro5"
            android:layout_height="180dp"
            android:background="@drawable/gradientdarkpink">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                app:lottie_fileName="contact.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" />


            <TextView
                android:id="@+id/iddesc6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/animation_view6"
                android:text="Contact"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/productsansregular"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

        </RelativeLayout>


    </RelativeLayout>
</ScrollView>