<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IDActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            style="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"/>

        <RelativeLayout
            android:id="@+id/intro1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginRight="10dp"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:background="@drawable/gradientfive">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/id1"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/cvv"/>

            <TextView
                android:id="@+id/iddesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id1"
                android:text="Identity"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/productsansregular"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/intro2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="355dp"
            android:layout_toRightOf="@+id/intro1"
            android:layout_height="180dp"
            android:background="@drawable/gradientpink">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/id2"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/cvv"/>

            <TextView
                android:id="@+id/iddesc2"
