<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#0198e1"
    android:layout_height="match_parent"
    tools:context=".PassportActivity">

    <TextView
        android:id="@+id/epicHeading"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EPIC"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/txt_epic"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:text="EPIC has a long history of working on voter privacy issues, which this government issued photo ID requirement strongly affects. In a March 2007 statement to the U.S. House Committee on the Judiciary, EPIC cautioned against new photo identification and proof of citizenship requirements for federal elections. Absent evidence of an actual problem, EPIC warned that the requirements could discourage legal voters."
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:layout_below="@+id/epicHeading"
        android:scrollbars="vertical"/>

    <Button
        android:id="@+id/returnn3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_epic"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="@drawable/rounded_corners"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:text="Return"/>

</RelativeLayout>
</ScrollView>