<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0198e1"
    tools:context=".CategoryActivity">

    <TextView
        android:id="@+id/Choose"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your ID Proof"
        android:textSize="40sp"
        android:gravity="center_horizontal" />

   <ImageView
       android:id="@+id/aadhar"
       android:layout_width="150dp"
       android:layout_height="200dp"
       android:src="@drawable/aadhar"
       android:layout_marginTop="100dp"
       android:layout_marginLeft="20dp"
       android:layout_below="@+id/Choose"/>

    <ImageView
        android:id="@+id/pancard"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/pancard"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/Choose"
        android:layout_toRightOf="@+id/aadhar"/>

    <ImageView
        android:id="@+id/passport"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/passport"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/aadhar"/>

    <ImageView
        android:id="@+id/epic"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/epic"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/aadhar"
        android:layout_toRightOf="@+id/passport"/>


</RelativeLayout>
</ScrollView>